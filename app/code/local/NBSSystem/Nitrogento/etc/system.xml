<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <nitrogento translate="label">
            <label>Nitrogento</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>310</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <licence translate="label">
                    <label>Licence</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <key translate="label">
                            <label>Your Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enter your licence key</comment>
                        </key>
                    </fields>
                </licence>
                <cache_blockhtml translate="label">
                    <label>Cache Blockhtml</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>nitrogento/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <learning_mode translate="label,comment">
                            <label>Activate learning mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>If active, this will decreases performances.</comment>
                        </learning_mode>
                    </fields>
                </cache_blockhtml>
                <cache_fullpage translate="label">
                    <label>Cache Fullpage</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>nitrogento/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <activate_indexphp translate="label">
                            <label>Activate Index.php</label>
                            <frontend_model>nitrogento/adminhtml_system_config_form_field_activateindexphp</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </activate_indexphp>
                    </fields>
                </cache_fullpage>
                <cache translate="label">
                    <label>Cache</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>nitrogento/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <clean_cache_each_order>
                            <label>Clean Catalog Cache on each order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If active, this will decreases performances on order savings.</comment>
                        </clean_cache_each_order>
                    </fields>
                </cache>
                <optimization_cdn translate="label">
                    <label>CDN</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>nitrogento/adminhtml_system_config_form_fieldset</frontend_model>
                    <sort_order>7</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enable base self CDN</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <base translate="label">
                            <label>Base URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Store base URL without "http://", e.g.: "www.nitrogento.com".</comment>
                        </base>   
                        <cdn translate="label">
                            <label>CDN url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>[X] is remplaced by the number of CDN, e.g.: "cdn[X].nitrogento.com".</comment>
                        </cdn>
                        <number translate="label">
                            <label>Number of CDN</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number>                      
                     </fields>
                </optimization_cdn>
                <about translate="label">
                    <label>About</label>
