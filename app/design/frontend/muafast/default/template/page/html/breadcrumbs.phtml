<?php if($crumbs && is_array($crumbs)): ?>
<div class="breadcrumbs">
    <ul>
        <?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
            <?php $label = $_crumbInfo['label']; ?>
            <?php //echo $label; ?>
            <?php $label2 = str_replace("1","",$label); ?>
            
            <?php if($label!=$label2): ?>
                <?php     
                    $optionId = $this->getRequest()->getParam("manufacturer");
                    $attribute = Mage::getModel('eav/config')->getAttribute('catalog_product', 'manufacturer');
                    $is_exist = false;
                    if (!empty($optionId)){
                        foreach ( $attribute->getSource()->getAllOptions(true, true) as $option){
                            if($option['value']==$optionId){
                                $_crumbInfo['label'] = $option['label'];
                                
                                $is_exist = true;
                                break;
                            }
                        }
                    }
                    else{
                        return;
                    }
                ?>
            
             
            <?php endif; ?>
            
            <li class="<?php echo $_crumbName ?>">
            <?php if($_crumbInfo['link']): ?>
                
                <a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['title']) ?>">
                    <?php echo $this->htmlEscape($_crumbInfo['label']) ?></a>
            <?php elseif($_crumbInfo['last']): ?>
                <strong><?php echo $this->htmlEscape($_crumbInfo['label']) ?></strong>
            <?php else: ?>
                
                <?php echo $this->htmlEscape($_crumbInfo['label']) ?>
            <?php endif; ?>
            <?php if(!$_crumbInfo['last']): ?>
               
            <?php endif; ?>
            </li>
        <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
